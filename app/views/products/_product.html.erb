<% cache product do %>
	<div class="row">
	          <div class="col-md-2"><%= product.name %></div>
	          <div class="col-md-2"><%= product.description %></div>
	          <div class="col-md-2"><%= product.image_url %></div>
	          <div class="col-md-2"><%= product.color %></div>
	          <div class="col-md-1"><%= link_to image_tag(product.image_url, class: "img-responsive aspect") %></div>

	</div>
	<div class="row">
	          <div class="col-md-2"><span class="glyphicon glyphicon-sunglasses" aria-hidden="true">  </span><%= link_to 'Show', product, :class => "btn btn-default btn-sm" %></div>

	          <div class="col-md-2"><span class="glyphicon glyphicon-pencil" aria-hidden="true">  </span><%= link_to 'Edit', edit_product_path(product), :class => "btn btn-default btn-sm" %></div>

	          <div class="col-md-2"><span class="glyphicon glyphicon-trash" aria-hidden="true">  </span><%= link_to 'Destroy', product, :class => "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></div>
	</div>

	<br>

	<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
	<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
	<span class="glyphicon glyphicon-option-horizontal" aria-hidden="true"></span>
<% end %>