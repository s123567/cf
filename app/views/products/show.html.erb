<div class="container space_bottom">
  <p id="notice"><%= notice %></p>

  <div class="row">
    <div class="col-md-2">
      <p>
        <strong>Name:</strong>
        <%= @product.name %>
      </p>
    </div>
    <div class="col-md-3">
      <p>
        <strong>Description:</strong>
        <%= @product.description %>
      </p>
    </div>
    <div class="col-md-3">
      <p>
        <strong>Image url:</strong>
        <%= @product.image_url %>
      </p>
    </div>
    <div class="col-md-2">
      <p>
        <strong>Color:</strong>
        <%= @product.color %>
      </p>
      </div>
      <div class="col-md-2">
        <%= link_to 'Edit', edit_product_path(@product) %> ||
        <%= link_to 'Back', products_path %>
      </div>
    </div>
      <br>

      <div class="row">
        <div class="col-md-4">
          <%= link_to image_tag(@product.image_url, class: "img-responsive aspect", id: "image_01") %>
        </div>

              <div class="form-group">
                <%= form_tag "/payments/create" do %>
                <%= render partial: "shared/stripe_checkout_button" %>
                <%= hidden_field_tag(:product_id, @product.id) %>

                <% end %>

              </div>
      </div>
      <br>
      <div class="row">
        <%= render "shared/comments" %>
        <div class="col-md-3">
          <%= render 'shared/new_comment'%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p>  Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>

        </div>
      </div>


      <%= will_paginate @comments %>

  </div>
