<% if signed_in? %>
<h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote: true) do |f| %>
  <p>
    <%= f.label :body, "Comments", :class=>'form-control form-group' %>
    <br>
    <%= f.text_area :body, :class=>'form-control form-group' %>
  </p>
  <div class="rating"></div>


<br>
  <p>
    <%= f.submit "Submit", :class=> 'btn btn-primary' %>
  </p>
  <% end %>

<% end %>
