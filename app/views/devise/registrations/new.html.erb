<div class="container">
  <div class="col-md-12 text-center">
    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <span class="glyphicon glyphicon-envelope" aria-hidden="true">  </span>
        <%= f.email_field :email, autofocus: true, :placeholder => 'Email address' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum, Dear Customer)</em>
        <% end %><br />
        <span class="glyphicon glyphicon-barcode" aria-hidden="true">  </span>
        <%= f.password_field :password, autocomplete: "off", :placeholder => 'Enter your Password' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'Password Confirmation' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => 'btn btn-success' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>


</div>
